{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": {
      "@uicr/accordion": ["packages/accordion/src"],
      "@uicr/alert": ["packages/alert/src"],
      "@uicr/button-close-bs": ["packages/button-close-bs/src"],
      "@uicr/button-close-tw": ["packages/button-close-tw/src"],
      "@uicr/button-close": ["packages/button-close/src"],
      "@uicr/button-bs": ["packages/button-bs/src"],
      "@uicr/button": ["packages/button/src"],
      "@uicr/card": ["packages/card/src"],
      "@uicr/checkbox": ["packages/checkbox/src"],
      "@uicr/chip": ["packages/chip/src"],
      "@uicr/code-highlight": ["packages/code-higlight/src"],
      "@uicr/common-bs": ["packages/common-bs/src"],
      "@uicr/common-tw": ["packages/common-tw/src"],
      "@uicr/core": ["packages/core/src"],
      "@uicr/dropdown": ["packages/dropdown/src"],
      "@uicr/input-group": ["packages/input-group/src"],
      "@uicr/input": ["packages/input/src"],
      "@uicr/menu-bs": ["packages/menu-bs/src"],
      "@uicr/menu": ["packages/menu/src"],
      "@uicr/modal": ["packages/modal/src"],
      "@uicr/pagination": ["packages/pagination/src"],
      "@uicr/radio": ["packages/radio/src"],
      "@uicr/range": ["packages/range/src"],
      "@uicr/select": ["packages/select/src"],
      "@uicr/tabs": ["packages/tabs/src"],
      "@uicr/textarea": ["packages/textarea/src"],
      "@uicr/toast": ["packages/toast/src"],
      "@uicr/tooltip": ["packages/tooltip/src"],
      "@uicr/transition-bs": ["packages/transition-bs/src"],
      "@uicr/transition-tw": ["packages/transition-tw/src"],
      "@uicr/transition": ["packages/transition/src"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
